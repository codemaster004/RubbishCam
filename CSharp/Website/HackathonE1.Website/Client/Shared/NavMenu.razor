                    <AuthorizeView>
                        <Authorized>
                            <button @onclick="Logout" class="button-capsule">Log out</button>
                        </Authorized>
                        <NotAuthorized>
                            <NavLink href="register" class="button-capsule">Sign-Up</NavLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
